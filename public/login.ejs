    <link rel="stylesheet" href="./css/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/normalizr@3.6.1/dist/normalizr.js"></script>
    <title>My App</title>
</head>

<body>

    <% if (name) { %>
    <div class="container my-5 py-3 bg-secondary text-white text-center">

        <h2>
            Bienvenido <%= name %>!
        </h2>
        <form method="get" action="/logout">
            <input type="hidden" class="form-control" id="name" value=<%- name %> aria-label="Recipient's username"
                aria-describedby="button-addon2" name="name">
            <button class="btn-sm btn-warning" type="submit">Logout</button>
        </form>
    </div>
    <% } %>

    <%- include ('prodAndChat.html') -%>

</body>
</html>